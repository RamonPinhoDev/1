@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignIManager

@if (SignIManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" id="logoutForm" method="post" class="ml-auto">
            <ul class="nav navbar-nav">
               
            <button type="submit" style="width:auto; color: white;" class="nav-link btn btn-link py-0">
                    Logout: @User.Identity.Name &nbsp;
                </button>
            </ul>
        </form>
}
else
{
        <ul class="nav navbar-nav">
            <li class="nav-item">
                <a class="nav-link text-white" asp-controller="Account" asp-action="Login" asp-route-returnurl="@string.Format("{0}{1}", Context.Request.Path, Context.Request.QueryString)">
                    Login
                </a>
            </li>
        </ul>
}
